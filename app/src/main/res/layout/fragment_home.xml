<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sistema de Evaluación"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="25dp"
            />

        <Spinner
            android:id="@+id/spinnerporcentaje"
            android:layout_below="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            />
        <View
            android:id="@+id/line1"
            android:layout_below="@+id/spinnerporcentaje"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/text2"
            android:layout_below="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prácticas Teóricas"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="25dp"
            />

        <TextView
            android:id="@+id/text3"
            android:layout_below="@+id/line1"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prom: 13.0"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            />

        <TextView
            android:id="@+id/textP1"
            android:layout_below="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Práctica 1"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="10dp"
            android:textSize="17sp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nota1"
            android:layout_below="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:layout_alignParentEnd="true">

            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:backgroundTint="@color/white"
                android:hint="14"
                android:inputType="number"
                android:textSize="17sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textP2"
            android:layout_below="@+id/textP1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Práctica 2"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="10dp"
            android:textSize="17sp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nota2"
            android:layout_below="@+id/nota1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:layout_alignParentEnd="true">

            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:backgroundTint="@color/white"
                android:hint="12"
                android:inputType="number"
                android:textSize="17sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:id="@+id/line2"
            android:layout_below="@+id/textP2"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/text4"
            android:layout_below="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prácticas Laboratorios"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="25dp"
            />

        <TextView
            android:id="@+id/text5"
            android:layout_below="@+id/line2"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prom: 14.5"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            />

        <TextView
            android:id="@+id/textL1"
            android:layout_below="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Práctica 1"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="10dp"
            android:textSize="17sp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/notaL1"
            android:layout_below="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:layout_alignParentEnd="true">

            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:backgroundTint="@color/white"
                android:hint="14"
                android:inputType="number"
                android:textSize="17sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textL2"
            android:layout_below="@+id/textL1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Práctica 2"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="10dp"
            android:textSize="17sp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/notaL2"
            android:layout_below="@+id/notaL1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:layout_alignParentEnd="true">

            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:backgroundTint="@color/white"
                android:hint="12"
                android:inputType="number"
                android:textSize="17sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textL3"
            android:layout_below="@+id/textL2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Práctica 3"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="10dp"
            android:textSize="17sp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/notaL3"
            android:layout_below="@+id/notaL2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:layout_alignParentEnd="true">

            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:backgroundTint="@color/white"
                android:hint="14"
                android:inputType="number"
                android:textSize="17sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textL4"
            android:layout_below="@+id/textL3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Práctica 4"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="10dp"
            android:textSize="17sp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/notaL4"
            android:layout_below="@+id/notaL3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:layout_alignParentEnd="true">

            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:backgroundTint="@color/white"
                android:hint="18"
                android:inputType="number"
                android:textSize="17sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/text6"
            android:layout_below="@+id/textL4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Promedio: 14.05"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/tecsup"
            />

        <TextView
            android:id="@+id/text7"
            android:layout_below="@+id/text6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aprobado!"
            android:textAlignment="center"
            android:layout_marginBottom="50dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/green"
            />

        <Button
            android:id="@+id/btn1"
            android:layout_below="@id/text7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="-5dp"
            android:text="CALCULAR"
            android:textStyle="bold"
            android:textSize="20sp"
            android:backgroundTint="@color/old">

        </Button>



    </RelativeLayout>




</androidx.coordinatorlayout.widget.CoordinatorLayout>